{
  "name": "dashboard-iegm",
  "version": "1.0.0",
  "description": "Dashboard interativo para análise do Índice de Efetividade da Gestão Municipal (IEGM) do TCEMG",
  "keywords": [
    "iegm",
    "dashboard",
    "municipios",
    "gestao-publica",
    "tcemg",
    "vue",
    "typescript",
    "cloudflare",
    "d1",
    "drizzle"
  ],
  "author": "Fundação Beta(https://github.com/fundacaobeta)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fundacaobeta/dashboard-iegm.git"
  },
  "bugs": {
    "url": "https://github.com/fundacaobeta/dashboard-iegm/issues"
  },
  "homepage": "https://github.com/fundacaobeta/dashboard-iegm#readme",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "yarn": ">=1.22.0"
  },
  "config": {
    "port": "3000",
    "apiPort": "3001",
    "d1Port": "8788",
    "defaultMunicipio": "BETIM",
    "defaultAno": "2023",
    "defaultTribunal": "TCEMG"
  },
  "scripts": {
    "# ---Development---": "",
    "dev": "vite --port $npm_package_config_port",
    "dev:parallel": "run-p local:server dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "yarn dev",
    "clean": "rimraf node_modules/.vite dist",
    "# ---Setup---": "",
    "setup": "bash scripts/setup.sh",
    "setup:quick": "run-s db:generate db:migrate data:seed data:migrate",
    "# ---Database---": "",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:drop": "drizzle-kit drop",
    "# ---Data---": "",
    "data:migrate": "tsx scripts/migrate-local.ts",
    "data:seed": "tsx scripts/seed-data.ts",
    "data:reset": "rimraf local.db && run-s db:migrate data:seed data:migrate",
    "data:convert-utf8": "tsx scripts/convert-to-utf8.ts",
    "# ---Cloudflare---": "",
    "cf:dev": "wrangler pages dev",
    "cf:dev:d1": "tsx scripts/dev-with-d1.ts",
    "cf:deploy": "wrangler pages deploy",
    "cf:db:create": "wrangler d1 create iegm-dashboard",
    "cf:db:migrate": "wrangler d1 migrations apply iegm-dashboard",
    "cf:db:studio": "wrangler d1 studio iegm-dashboard",
    "cf:db:migrate-data": "tsx scripts/migrate-d1.ts",
    "# ---Local Development---": "",
    "local:server": "tsx scripts/local-server.ts --port $npm_package_config_apiPort",
    "test:api": "tsx scripts/test-api.ts",
    "# ---Testing---": "",
    "test": "run-p test:unit test:e2e",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e:install": "playwright install",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:debug": "playwright test --debug",
    "# ---Quality---": "",
    "quality": "run-s type-check lint:check format:check",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "# ---Build--- & Deploy": "",
    "build:all": "run-s clean build test:unit",
    "deploy:prep": "run-s quality build:all",
    "deploy": "run-s deploy:prep cf:deploy"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250709.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@vueuse/core": "^13.5.0",
    "better-sqlite3": "^12.2.0",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "lucide-vue-next": "^0.525.0",
    "papaparse": "^5.5.3",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@tailwindcss/vite": "^4",
    "@tsconfig/node22": "^22.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2",
    "@types/express": "^5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.12",
    "@types/papaparse": "^5.3.16",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.0",
    "@vitest/eslint-plugin": "^1.2.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.5.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "~5.8.0",
    "vite": "^7.0.7",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  },
  "packageManager": "yarn@4.9.2",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "volta": {
    "node": "20.11.0",
    "yarn": "4.9.2"
  }
}